<Window x:Class="lkartladu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lkartladu"
        mc:Ignorable="d"
        Title="LKart" Height="860" Width="1024" MinWidth="800" MinHeight="600">
    <Grid x:Name="grid_Main">
        <Menu Height="22" VerticalAlignment="Top" Width="{Binding ElementName=grid_Main,Path=ActualWidth}">
            <MenuItem Header="File" Height="20" FontSize="14">
                <MenuItem x:Name="setingsbtn" Header="Settings" Click="Setingsbtn_Click"/>
                <Separator />
                <MenuItem x:Name="exitbtn" Header="Exit" Click="Exitbtn_Click"/>
            </MenuItem>
            <MenuItem x:Name="aboutbnt" Header="About" Height="20" Click="Aboutbnt_Click" FontSize="14"/>
        </Menu>
        <Grid HorizontalAlignment="Left" Height="189" VerticalAlignment="Bottom" Width="{Binding ElementName=grid_Main,Path=ActualWidth}" Background="#FF9E9E9E">
            <TextBlock HorizontalAlignment="Left" Margin="45,92,0,0" TextWrapping="Wrap" Text="Count: 9999 items in DB" VerticalAlignment="Top" FontSize="36"/>
            <TextBlock HorizontalAlignment="Left" Margin="825,53.4,0,0" TextWrapping="Wrap" Text="01.01.2019" VerticalAlignment="Top" FontSize="20"/>
            <TextBlock HorizontalAlignment="Left" Margin="837.37,93.5,0,0" TextWrapping="Wrap" Text="Monday" VerticalAlignment="Top" FontSize="20"/>
            <TextBlock HorizontalAlignment="Left" Margin="837.37,133.4,0,0" TextWrapping="Wrap" Text="15:00:00" VerticalAlignment="Top" FontSize="20"/>
        </Grid>
        <Button x:Name="sellitembtn" Content="Sell items" HorizontalAlignment="Left" Margin="80,401,0,0" VerticalAlignment="Top" Width="296" Height="79" FontSize="22" Click="Sellitembtn_Click"/>
        <Button x:Name="edititembtn" Content="Edit items" HorizontalAlignment="Left" Margin="80,242,0,0" VerticalAlignment="Top" Width="296" Height="79" FontSize="22" Click="Edititembtn_Click"/>
        <Button x:Name="additembtn" Content="Add items" HorizontalAlignment="Left" Margin="80,81,0,0" VerticalAlignment="Top" Width="296" Height="79"  FontSize="22" Click="Additembtn_Click"/>
    </Grid>
</Window>
